<Window x:Class="Administration.Features.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Features="clr-namespace:Administration.Features"
        Title="MainView"
        Width="800"
        Style="{StaticResource WindowStyle}">
    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
            </Grid>
            
            <TabControl>
                <TabItem Header="Connections"></TabItem>
                <TabItem Header="Flights"></TabItem>
                <TabItem Header="Reservations">
                    <Features:ReservationsView></Features:ReservationsView>
                </TabItem>
                <TabItem Header="Cities">
                </TabItem>
                <TabItem Header="Countries">
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
